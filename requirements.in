torch==2.8.0 ; sys_platform == 'darwin'
torchvision==0.23.0 ; sys_platform == 'darwin'

# Use the standard bitsandbytes for non-Windows (or exclude if not supported on Mac)
bitsandbytes ; sys_platform != 'win32'