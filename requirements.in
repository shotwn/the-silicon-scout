# Only install these on Windows
torch @ https://download.pytorch.org/whl/cu129/torch-2.8.0%2Bcu129-cp312-cp312-win_amd64.whl ; sys_platform == 'win32'
torchvision @ https://download.pytorch.org/whl/cu129/torchvision-0.23.0%2Bcu129-cp312-cp312-win_amd64.whl ; sys_platform == 'win32'
bitsandbytes-windows ; sys_platform == 'win32'

